# root
type Query {
    # list all books
    listBooks: [Book!]
    # list all authors
    listAuthors: [Author!]
    # find author by id
    findBookById(id: Int!): Book
}

# book
type Book {
    id: Int!
    name: String!
    author: Author!
    publicationYear: Int!
}

# author
type Author {
    id: Int!
    name: String!
}